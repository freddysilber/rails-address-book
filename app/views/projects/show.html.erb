<center>
	<%= link_to "Back", projects_path, :class => "button" %>
	<%= link_to "Delete", @project, method: :delete, data: { confirm: "Are you sure you want to delete project: #{@project.project_name}?"}, :class => "button", :style => "float: right" %>
	<%= link_to "New Task", new_project_task_path(@project), :class => "button", :style => "float: right" %>
	<%#= link_to "New Task", "/tasks/new", :class => "button", :style => "float: right" %>
	<%= link_to "Edit", "#{@project.id}/edit", :class => "button", :style => "float: right" %>
	<br/>
	<hr/>
	<br/>
	<%= render partial: "projects/project", locals: { p: @project } %>
</center>

<table>
	<tr>
		<th>Task Name</th>
		<th>Start Date</th>
		<th>End Date</th>
		<th>Complete</th>
		<th>Status</th>
	</tr>
	<% @tasks.each do |t| %>
		<tr>
			<td><%= t.task_name %></td>
			<td><%= t.start_date %></td>
			<td><%= t.end_date %></td>
			<td><%= check_box_tag 'Complete', t.complete, t.complete, disabled: true %></td>
			<td><%= t.status %></td>
		</tr>
	<% end %>
</table>
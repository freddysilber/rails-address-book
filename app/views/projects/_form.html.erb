<%= form_for @project do |p| %>
	<center>
		<%= label_tag(:project_name) %>
		<%= p.text_field :project_name, :placeholder => :project_name, :class => 'field' %>
		<br/>
		<%= label_tag(:account_id) %>
		<%= p.collection_select :account_id, Account.where(user_id: current_user.id), :id, :name %>
		<br/>
		<%= label_tag(:owner) %>
		<%= p.collection_select :owner, User.all, :id, :username %>
		<br/>
		<div class="field">
			<%= label_tag(:complete) %>
			<%= p.check_box :complete, :placeholder => :complete, :style => 'float: left' %>
		</div>
		<%= p.submit 'Save', :class => 'button' %>
	</center>
<% end %>
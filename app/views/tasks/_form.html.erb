<%= form_for @task do |t| %>
	<center>
		<%= label_tag(:task_name) %>
		<%= t.text_field :task_name, :placeholder => :task_name, :class => 'field' %>
		<br/>
		<%= label_tag(:project_id) %>
		<%= t.collection_select :project_id, Project.all, :id, :project_name %>
		<br/>
		<%= label_tag(:status) %>
		<%# <%= t.collection_select :status %> %>
		<br/>
		<%= label_tag(:start_date) %>
		<%= t.text_field :start_date, date: {provide: 'datepicker'}, :class => 'field' %>
		<br/>
		<%= label_tag(:end_date) %>
		<%= t.text_field :end_date, date: {provide: 'datepicker'}, :class => 'field' %>
		<br/>
		<div class="field">
			<%= label_tag(:complete) %>
			<%= t.check_box :complete, :placeholder => :complete, :style => "float: left" %>
		</div>
		<%= t.submit 'Save', :class => 'button' %>
	</center>
<% end %>
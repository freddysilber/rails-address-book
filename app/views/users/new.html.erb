<center>
<% if @user.errors.any? %>
	<%= render partial: "layouts/errors", locals: { r: @user } %>
<% end %>
<hr/>

<%= link_to "Back", root_path, :class => 'button' %>
<br/>
<hr/>
<br/>
	<div>
		<%= form_for @user, controller: 'users', action: 'create' do |f| %>
			<h1>Sign Up</h1>
			<%= f.text_field :username, :placeholder => 'Username', :class => 'field' %>
			<br />
			<%= f.text_field :password, :placeholder => 'Password', :class => 'field' %>
			<br />
			<%= f.submit "Create User", :class => 'button' %>
		<% end %>
	</div>
</center>
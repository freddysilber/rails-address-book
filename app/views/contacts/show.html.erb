<center>
	<%= link_to "Back", contacts_path, :class => "button" %>
	<%= link_to "Delete", @contact, method: :delete, data: { confirm: "Are you sure you want to delete contact: #{@contact.first_name}?" }, :class => "button", :style => "float:right" %>
	<%= link_to "Edit", "#{@contact.id}/edit", :class => "button", :style => "float:right" %>
	<%= link_to "New Account", "/accounts/new", :class => "button", :style => "float:right"%>
	<br/>
	<hr/>
	<br/>
	<h1 class="showTitle">Contact for: <%= @contact.first_name%></h1>
	<h1><em>First Name: </em><%= @contact.first_name %></h1>
	<h1><em>Last Name: </em><%= @contact.last_name %></h1>
	<h1><em>Phone Number: </em><%= @contact.phone_number %></h1>
	<h1><em>Email: </em><%= @contact.email %></h1>
</center>

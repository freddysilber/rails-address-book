<div class="partial">
	<%= link_to "Edit", "/contacts/#{c.id}/edit", :class => "button", :style => "float: right; width: 4rem" %>
	<h1><%= link_to "#{c.first_name.capitalize} #{c.last_name.capitalize}", "/contacts/#{c.id}", :class => 'navigateToContact' %></h1>
	<p><em>First Name: </em><%= c.first_name %></p>
	<p><em>Last Name: </em><%= c.last_name %></p>
	<p><em>Phone Number: </em><%= c.phone_number %></p>
	<p><em>Email: </em><%= c.email %></p>
	<p><em>Account: </em><%= c.account.name %></p>
	<hr/>
</div>